# Example env for Slack bot runtime (DO NOT COMMIT REAL SECRETS)
# Copy to windsurf-racen-local/.env and fill in real values

# Slack bot (Socket Mode)
SLACK_BOT_TOKEN=replace-with-xoxb
SLACK_APP_TOKEN=replace-with-xapp
SLACK_SIGNING_SECRET=replace-with-secret
SLACK_ALLOWLIST_PRESET=faqs_shipping  # faqs | shipping | faqs_shipping | all_subset

# OpenAI
OPENAI_API_KEY=replace-with-openai-key
OPENAI_MODEL=gpt-4o-mini

# Answer API endpoint
RACEN_ANSWER_URL=http://127.0.0.1:8000

# Retrieval tuning (optional)
TOP_K=10
RERANK_TOP_N=14
FAST_MODE=1
RETRIEVE_BACKOFF_ENABLE=1
RETRIEVE_BACKOFF_THRESHOLD=0.35
RETRIEVE_BACKOFF_SECONDARY=/pages/faqs
# RETRIEVE_SOURCE_ALLOWLIST=

# Database (optional, only if pipeline needs direct DB access)
PGHOST=localhost
PGPORT=5432
PGUSER=postgres
PGPASSWORD=postgres
PGDATABASE=racen
PGOPTIONS=-c search_path=docling,public
